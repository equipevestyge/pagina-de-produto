<script>
    document.addEventListener('DOMContentLoaded', function () {
      const navItems = document.querySelectorAll('.timeline-nav-item');
      const dots = document.querySelectorAll('.timeline-dot');
      const slides = document.querySelectorAll('.timeline-slide');

      navItems.forEach(item => {
        item.addEventListener('click', () => {
          const index = item.getAttribute('data-index');

          navItems.forEach(nav => nav.classList.remove('active'));
          dots.forEach(dot => dot.classList.remove('active'));
          slides.forEach(s => s.classList.remove('active'));

          item.classList.add('active');
          item.querySelector('.timeline-dot').classList.add('active');
          document.querySelector(`.timeline-slide[data-index='${index}']`).classList.add('active');
        });
      });
    });
  </script>
</div>

